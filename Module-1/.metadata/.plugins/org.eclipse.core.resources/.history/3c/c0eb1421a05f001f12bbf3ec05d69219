package java_projects;
//W.A.J.P to Print pattern
public class Prog7 {
	public static void main(String[] args) {
        for (int i = 1; i <= 5; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(j);
            }
            System.out.println();
        }
        for (int i = 1; i <= 5; i++) {
            for (int j = 1; j <= i; j++) {
                if ((i + j) % 2 == 0) {
                    System.out.print("1");
                } else {
                    System.out.print("0");
                }
            }
            System.out.println();
        }
        for (int i = 1; i <= 4; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(i + " ");
            }
            System.out.println();
        }
 int n = 3;  // Height of the pattern (half)
        
        // Upper half
        for (int i = 1; i <= n; i++) {
            for (int j = i; j < n; j++) {
                System.out.print("  "); // Print spaces
            }
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("* "); // Print stars
            }
            System.out.println();
        }
        
        // Lower half
        for (int i = n - 1; i >= 1; i--) {
            for (int j = n; j > i; j--) {
                System.out.print("  "); // Print spaces
            }
            for (int j = 1; j <= (2 * i - 1); j++) {
                System.out.print("* "); // Print stars
            }
            System.out.println();
        }
    }
}
